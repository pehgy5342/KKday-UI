<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/btn_se"
            app:layout_constraintHorizontal_bias="1.0" style="@style/Widget.AppCompat.Button.Borderless"/>
    <TextView
            android:text="行程表"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_se" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/btn_se" app:layout_constraintStart_toEndOf="@+id/iv_se"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <ImageView android:layout_width="37dp" android:layout_height="33dp"
               android:background="@drawable/test4"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="@+id/btn_se" android:id="@+id/iv_se"/>

    <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/btn_se" android:id="@+id/view1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="108dp"
            android:layout_marginStart="108dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/view1" android:id="@+id/btn_map"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    <TextView
            android:text="地圖"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_map" app:layout_constraintStart_toStartOf="@+id/tv_se"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/view1"/>
    <ImageView android:layout_width="37dp" android:layout_height="33dp"
               android:background="@drawable/test3"
               app:layout_constraintStart_toStartOf="@+id/iv_se" android:id="@+id/iv_map"
               android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/view1"/>
    <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="108dp"
            android:layout_marginStart="108dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_map" android:id="@+id/view2"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/view2" android:id="@+id/btn_cost"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    <TextView
            android:text="費用項目"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cost" app:layout_constraintStart_toStartOf="@+id/tv_map"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/btn_cost"/>
    <ImageView android:layout_width="37dp" android:layout_height="33dp"
               android:background="@drawable/test2"
               app:layout_constraintStart_toStartOf="@+id/iv_map"
               android:id="@+id/iv_cost" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="@+id/btn_cost"/>
    <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="108dp" android:layout_marginStart="108dp" android:id="@+id/view3"
            app:layout_constraintTop_toBottomOf="@+id/btn_cost"
            app:layout_constraintEnd_toEndOf="parent"/>


    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            style="@style/Widget.AppCompat.Button.Borderless" android:id="@+id/btn_tip"/>

    <TextView
            android:text="注意事項"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tip" app:layout_constraintStart_toStartOf="@+id/tv_cost"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/view3"/>
    <ImageView android:layout_width="37dp" android:layout_height="33dp"
               android:background="@drawable/test"
               app:layout_constraintStart_toStartOf="@+id/iv_cost"
               android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/view3"
               android:id="@+id/iv_tip"/>

</androidx.constraintlayout.widget.ConstraintLayout>