<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="14dp"
            android:layout_height="23dp" app:srcCompat="@drawable/title"
            android:id="@+id/iv_tip"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000"
            android:text="【2019京都賞櫻】嵐山小火車保證有限量車票 (季節限定)"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:id="@+id/tv_title"/>

    <TextView
            android:text="日本,京都"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_place" app:layout_constraintStart_toEndOf="@+id/iv_place"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

    <TextView
            android:text="產品編號 : 20206"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_num" app:layout_constraintStart_toStartOf="@+id/tv_place"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/tv_place"/>

    <TextView
            android:text="TWD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_num" android:id="@+id/tv_twd"
            app:layout_constraintStart_toStartOf="@+id/iv_num"/>
    <TextView
            android:text="360"
            android:textSize="20sp"
            android:textColor="#34CCDA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cost" app:layout_constraintStart_toEndOf="@+id/tv_twd"
            android:layout_marginStart="12dp" android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_num" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_twd"
            app:layout_constraintVertical_bias="0.555"/>
    <ImageView
            android:layout_width="14dp"
            android:layout_height="23dp" app:srcCompat="@drawable/tag"
            android:id="@+id/iv_num"
            app:layout_constraintEnd_toStartOf="@+id/tv_num" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_place"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="13dp"
            android:layout_height="21dp" app:srcCompat="@drawable/gps2"
            android:id="@+id/iv_place"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:rating="4"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/ratingBar"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cost"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_num"
            app:layout_constraintVertical_bias="1.0" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_starts" android:layout_marginRight="8dp"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_starts"
              android:text="(146)"
              app:layout_constraintBottom_toBottomOf="@+id/ratingBar"
              app:layout_constraintTop_toTopOf="@+id/ratingBar"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
              android:layout_marginRight="16dp"/>

    <View
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            android:layout_marginTop="8dp"
            android:id="@+id/view1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"/>
    <View
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/view2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_tip"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>
    <TextView
            android:text="立即確認並發送憑證"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tip"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/view1"
            app:layout_constraintStart_toEndOf="@+id/iv_tip" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="392dp"
            android:layout_height="94dp" app:srcCompat="@drawable/data1"
            android:id="@+id/imageView6" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/view2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>